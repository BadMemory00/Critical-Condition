@page
@model PleaseWorkDamnIt.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Device.ID" />
            <div class="form-group">
                <label asp-for="Device.Name" class="control-label"></label>
                <input asp-for="Device.Name" class="form-control" />
                <span asp-validation-for="Device.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Brand" class="control-label"></label>
                <input asp-for="Device.Brand" class="form-control" />
                <span asp-validation-for="Device.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Model" class="control-label"></label>
                <input asp-for="Device.Model" class="form-control" />
                <span asp-validation-for="Device.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.TypeOfService" class="control-label"></label>
                <input asp-for="Device.TypeOfService" class="form-control" />
                <span asp-validation-for="Device.TypeOfService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.PurchasingDate" class="control-label"></label>
                <input asp-for="Device.PurchasingDate" class="form-control" />
                <span asp-validation-for="Device.PurchasingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.NumberOfWorkingDays" class="control-label"></label>
                <input asp-for="Device.NumberOfWorkingDays" class="form-control" />
                <span asp-validation-for="Device.NumberOfWorkingDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.NumberOfFailures" class="control-label"></label>
                <input asp-for="Device.NumberOfFailures" class="form-control" />
                <span asp-validation-for="Device.NumberOfFailures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.DownTime" class="control-label"></label>
                <input asp-for="Device.DownTime" class="form-control" />
                <span asp-validation-for="Device.DownTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Safety" class="control-label"></label>
                   @*<input asp-for="Device.Safety" class="form-control" />*@
                <select asp-for="Device.Safety" class="custom-select">
                    <option value="1">Negligible</option>
                    <option value="2">Minor</option>
                    <option value="3">Serious</option>
                    <option value="4">Critical</option>
                    <option value="5">Catastrophic</option>
                </select>
                <span asp-validation-for="Device.Safety" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Function" class="control-label"></label>
                <select asp-for="Device.Function" class="custom-select">
                    <option value="1">Micelles</option>
                    <option value="2">Monitoring</option>
                    <option value="3">TherapyAnalysis</option>
                    <option value="4">Diagnostic</option>
                    <option value="5">LifeSupport</option>
                </select>
                <span asp-validation-for="Device.Function" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Area" class="control-label"></label>
                <select asp-for="Device.Area" class="custom-select">
                    <option value="1">Other</option>
                    <option value="2">InternalUnits</option>
                    <option value="3">RadiologyLabs</option>
                    <option value="4">EmergencyICU</option>
                    <option value="5">OR</option>
                </select>
                <span asp-validation-for="Device.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.ServiceCost" class="control-label"></label>
                <input asp-for="Device.ServiceCost" class="form-control" />
                <span asp-validation-for="Device.ServiceCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.OperationCost" class="control-label"></label>
                <input asp-for="Device.OperationCost" class="form-control" />
                <span asp-validation-for="Device.OperationCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.PurchasingCost" class="control-label"></label>
                <input asp-for="Device.PurchasingCost" class="form-control" />
                <span asp-validation-for="Device.PurchasingCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Detection" class="control-label"></label>
                <select asp-for="Device.Detection" class="custom-select">
                    <option value="1">Easy To Detect</option>
                    <option value="2">High Chance</option>
                    <option value="3">Moderate Chance</option>
                    <option value="4">Low Chance</option>
                    <option value="5">No Chance</option>
                </select>
                <span asp-validation-for="Device.Detection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
